{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Choropleth map showing NBA players per 100k residents by U.S. state.",
  "width": 1100,
  "height": 550,
  "background": "transparent",

  "config": {
    "style": { "guide-label": { "fontSize": 12, "font": "Inter" } },
    "axis": { "labelColor": "#e2e8f0", "titleColor": "#facc15" },
    "legend": {
      "labelColor": "#e2e8f0",
      "titleColor": "#facc15",
      "titleFont": "Bebas Neue",
      "labelFont": "Inter"
    }
  },

  "projection": { "type": "albersUsa" },

  "layer": [
    {
      "data": { "sphere": true },
      "mark": {
        "type": "geoshape",
        "fill": "transparent",
        "stroke": null
      }
    },
    {
      "data": { "graticule": { "step": [20, 20] } },
      "mark": {
        "type": "geoshape",
        "stroke": "#334155",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/us-atlas@3/nation-10m.json",
        "format": { "type": "topojson", "feature": "nation" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "none",
        "stroke": "#facc15",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/us-atlas@3/states-10m.json",
        "format": { "type": "topojson", "feature": "states" }
      },
      "transform": [
        {
          "lookup": "id",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/JenqAu/FIT3179/refs/heads/main/data/nba_players_per_state_normalized.csv"
            },
            "key": "FIPS",
            "fields": ["State", "Players", "Population", "Players_per_100k"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#0f172a",
        "strokeWidth": 0.7
      },
      "encoding": {
        "color": {
          "field": "Players_per_100k",
          "type": "quantitative",
          "title": "Players per 100k",
          "scale": {
            "domain": [0, 0.5, 1.0, 2.0, 3.0],
            "range": ["#ffffcc", "#c2e699", "#78c679", "#238443"]
          },
          "legend": {
              "title": "Players per 100k",
              "format": ".1f",
              "orient": "bottom-right",
              "direction": "horizontal",
              "gradientLength": 200,
              "gradientThickness": 12,
              "titleAnchor": "start",
              "titleFont": "Bebas Neue",
              "titleColor": "#ffffff",
              "labelColor": "#e2e8f0",
              "labelFont": "Inter",
              "labelFontSize": 12,
              "offset": 8
            }
        },
        "tooltip": [
          { "field": "State", "type": "nominal" },
          { "field": "Players", "type": "quantitative", "title": "Total Players" },
          {
            "field": "Population",
            "type": "quantitative",
            "title": "Population",
            "format": ","
          },
          {
            "field": "Players_per_100k",
            "type": "quantitative",
            "title": "Players per 100k",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}
