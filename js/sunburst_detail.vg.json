{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Players in Selected Category",
    "subtitle": "Click on sunburst segments above to filter this chart"
  },
  "width": 600,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/JenqAu/FIT3179/refs/heads/main/data/NBA%20Players%20by%20State.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "sunburst_select",
      "select": {"type": "point", "encodings": ["color"]}
    }
  ],
  "transform": [
    {"filter": "datum['3PA'] > 50 && datum['3P%'] > 0"},
    {"calculate": "datum['3P%'] * 100", "as": "efficiency"},
    {
      "calculate": "datum.efficiency >= 40 ? 'Elite' : datum.efficiency >= 37 ? 'Excellent' : datum.efficiency >= 35 ? 'Good' : datum.efficiency >= 32 ? 'Average' : 'Developing'",
      "as": "efficiency_tier"
    },
    {
      "calculate": "datum['3PA'] < 300 ? 'Low Volume' : datum['3PA'] < 800 ? 'Medium Volume' : datum['3PA'] < 1500 ? 'High Volume' : 'Elite Volume'",
      "as": "volume_tier"
    },
    {
      "filter": "sunburst_select.efficiency_tier == null || datum.efficiency_tier == sunburst_select.efficiency_tier"
    },
    {
      "filter": "sunburst_select.volume_tier == null || datum.volume_tier == sunburst_select.volume_tier"
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "PTS", "order": "descending"}]
    },
    {"filter": "datum.rank <= 20"}
  ],
  "mark": {
    "type": "arc",
    "innerRadius": 50,
    "stroke": "#fff",
    "strokeWidth": 1
  },
  "encoding": {
    "theta": {
      "field": "PTS",
      "type": "quantitative",
      "stack": true
    },
    "radius": {
      "field": "PTS",
      "type": "quantitative",
      "scale": {"range": [80, 250]}
    },
    "color": {
      "field": "Player",
      "type": "nominal",
      "legend": null
    },
    "tooltip": [
      {"field": "Player", "title": "Player"},
      {"field": "PTS", "title": "Career Points", "format": ","},
      {"field": "3PA", "title": "3-Point Attempts", "format": ".0f"},
      {"field": "efficiency", "title": "3-Point %", "format": ".1f"},
      {"field": "efficiency_tier", "title": "Efficiency Tier"},
      {"field": "volume_tier", "title": "Volume Tier"}
    ]
  },
  "config": {
    "legend": {"titleFontSize": 13, "labelFontSize": 12},
    "axis": {"labelFontSize": 12, "titleFontSize": 13}
  }
}