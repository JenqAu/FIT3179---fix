{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "NBA 3-Point Shooting: Sunburst Analysis",
    "subtitle": "Hierarchical view of players by efficiency tier and attempt volume"
  },
  "width": 800,
  "height": 800,
  "data": {
    "url": "https://raw.githubusercontent.com/JenqAu/FIT3179/refs/heads/main/data/NBA%20Players%20by%20State.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum['3PA'] > 50 && datum['3P%'] > 0"},
    {"calculate": "datum['3P%'] * 100", "as": "efficiency"},
    {
      "calculate": "datum.efficiency >= 40 ? 'Elite' : datum.efficiency >= 37 ? 'Excellent' : datum.efficiency >= 35 ? 'Good' : datum.efficiency >= 32 ? 'Average' : 'Developing'",
      "as": "efficiency_tier"
    },
    {
      "calculate": "datum['3PA'] < 300 ? 'Low Volume' : datum['3PA'] < 800 ? 'Medium Volume' : datum['3PA'] < 1500 ? 'High Volume' : 'Elite Volume'",
      "as": "volume_tier"
    },
    {
      "aggregate": [
        {"op": "count", "as": "player_count"},
        {"op": "mean", "field": "PTS", "as": "avg_points"},
        {"op": "max", "field": "PTS", "as": "top_points"}
      ],
      "groupby": ["efficiency_tier", "volume_tier"]
    }
  ],
  "mark": {
    "type": "arc",
    "innerRadius": 50,
    "stroke": "#fff",
    "strokeWidth": 1
  },
  "encoding": {
    "theta": {
      "field": "player_count",
      "type": "quantitative",
      "stack": true
    },
    "radius": {
      "field": "player_count",
      "type": "quantitative",
      "scale": {"range": [100, 300]}
    },
    "color": {
      "field": "efficiency_tier",
      "type": "nominal",
      "scale": {
        "domain": ["Elite", "Excellent", "Good", "Average", "Developing"],
        "range": ["#2E8B57", "#32CD32", "#FFD700", "#FFA500", "#DC143C"]
      }
    },
    "detail": {"field": "volume_tier"},
    "tooltip": [
      {"field": "efficiency_tier", "title": "Efficiency Tier"},
      {"field": "volume_tier", "title": "Volume Tier"},
      {"field": "player_count", "title": "Number of Players"},
      {"field": "avg_points", "title": "Avg Career Points", "format": ".0f"},
      {"field": "top_points", "title": "Top Career Points", "format": ".0f"}
    ]
  },
  "config": {
    "legend": {"titleFontSize": 13, "labelFontSize": 12},
    "axis": {"labelFontSize": 12, "titleFontSize": 13}
  }
}