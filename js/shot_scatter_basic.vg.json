{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Basic shot scatter: LOC_X vs LOC_Y.",
  "width": 500,
  "height": 470,
  "background": "#ffffff",
  "data": {
    "url": "../data/shot_data.csv",
    "format": {"type": "csv", "parse": {"LOC_X": "number", "LOC_Y": "number"}}
  },
  "transform": [
    {"filter": "datum.PLAYER_NAME == 'Michael Jordan'"},
    {"filter": "datum.SEASON == '1996-97 Season'"}
  ],
  "layer": [
    {
      "data": {"values": [{"img": "../data/court.png", "x": -250, "x2": 250, "y": -47.5, "y2": 422.5}]},
      "mark": {"type": "image", "opacity": 0.45},
      "encoding": {
        "x": {"field": "x", "type": "quantitative", "scale": {"domain": [-250, 250]}, "axis": null},
        "x2": {"field": "x2"},
        "y": {"field": "y", "type": "quantitative", "scale": {"domain": [-47.5, 422.5]}, "axis": null},
        "y2": {"field": "y2"},
        "url": {"field": "img"}
      }
    },
    {
      "mark": {"type": "point", "opacity": 0.75, "size": 50, "filled": true, "color": "#3b82f6"},
      "encoding": {
        "x": {"field": "LOC_X", "type": "quantitative", "scale": {"domain": [-250, 250]}, "axis": {"title": "LOC_X"}},
        "y": {"field": "LOC_Y", "type": "quantitative", "scale": {"domain": [-47.5, 422.5]}, "axis": {"title": "LOC_Y"}},
        "tooltip": [
          {"field": "PLAYER_NAME", "title": "Player"},
          {"field": "SHOT_TYPE", "title": "Type"},
          {"field": "SHOT_DISTANCE", "title": "Distance (ft)"}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": true}
  }
}
