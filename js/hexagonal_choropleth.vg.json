{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "NBA Player Birth Locations - Hexagonal Density Choropleth",
  "width": 800,
  "height": 600,
  "data": {
    "url": "../data/birthplace/hex_bins.geojson",
    "format": {"type": "json", "property": "features"}
  },
  "projection": {
    "type": "albersUsa"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "properties.count",
      "type": "quantitative",
      "scale": {
        "scheme": "reds",
        "domain": [1, 25]
      },
      "legend": {
        "title": "Players per Hexagon"
      }
    },
    "tooltip": [
      {"field": "properties.count", "type": "quantitative", "title": "Players"},
      {"field": "properties.h3_index", "type": "nominal", "title": "Hex ID"}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "background": "#f8f9fa"
  }
}