{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "NBA 3-Point Shooting: Efficiency vs Volume",
    "subtitle": "Bubble size represents total career points. Dashed line shows 35% efficiency threshold."
  },
  "width": 900,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/JenqAu/FIT3179/refs/heads/main/data/NBA%20Players%20by%20State.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum['3PA'] > 50 && datum['3P%'] > 0"},
    {"calculate": "datum['3PA']", "as": "attempts"},
    {"calculate": "datum['3P%'] * 100", "as": "efficiency"}
  ],
  "params": [
    {
      "name": "position_filter",
      "bind": {
        "input": "select",
        "options": [
          null,
          "PG", "SG", "SF", "PF", "C"
        ],
        "labels": [
          "All Positions",
          "Point Guard", "Shooting Guard", "Small Forward", "Power Forward", "Center"
        ],
        "name": "Filter by Position: "
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "circle",
        "opacity": 0.7,
        "size": 100
      },
      "encoding": {
        "x": {
          "field": "attempts",
          "type": "quantitative",
          "title": "3-Point Attempts",
          "scale": {"domain": [50, 7500]}
        },
        "y": {
          "field": "efficiency",
          "type": "quantitative",
          "title": "3-Point Efficiency (%)",
          "scale": {"domain": [0, 50]}
        },
        "size": {
          "field": "PTS",
          "type": "quantitative",
          "title": "Total Points",
          "scale": {"range": [30, 300], "domain": [0, 20000]}
        },
        "color": {
          "field": "State",
          "type": "nominal",
          "title": "Birth State"
        },
        "tooltip": [
          {"field": "Player", "type": "nominal", "title": "Player"},
          {"field": "attempts", "type": "quantitative", "title": "3-Point Attempts", "format": ".0f"},
          {"field": "efficiency", "type": "quantitative", "title": "3-Point %", "format": ".1f"},
          {"field": "PTS", "type": "quantitative", "title": "Total Points", "format": ".0f"},
          {"field": "State", "type": "nominal", "title": "Birth State"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "#333"
      },
      "encoding": {
        "text": {"value": "NBA 3-Point Shooting Analysis"},
        "x": {"value": 450},
        "y": {"value": 30}
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "#666",
        "strokeDash": [5, 5],
        "opacity": 0.8
      },
      "encoding": {
        "y": {"datum": 35}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 11,
        "color": "#666"
      },
      "encoding": {
        "text": {"value": "35% Efficiency Threshold"},
        "x": {"value": 50},
        "y": {"value": 380}
      }
    }
  ],
  "config": {
    "legend": {"titleFontSize": 13, "labelFontSize": 12},
    "axis": {"labelFontSize": 12, "titleFontSize": 13}
  }
}