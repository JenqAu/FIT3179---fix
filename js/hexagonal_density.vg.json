{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 800,
  "height": 600,
  "padding": 5,
  "data": [
    {
      "name": "players",
      "url": "data/birthplace/NBA_Players_sample_coords.csv",
      "format": {"type": "csv"},
      "transform": [
        {
          "type": "filter",
          "expr": "datum.latitude != null && datum.longitude != null"
        }
      ]
    },
    {
      "name": "hexbins",
      "source": "players",
      "transform": [
        {
          "type": "hexbin",
          "fields": ["longitude", "latitude"],
          "size": [800, 600]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "hexbins", "field": "count"},
      "range": {"scheme": "reds"},
      "zero": true
    }
  ],
  "marks": [
    {
      "type": "path",
      "from": {"data": "hexbins"},
      "encode": {
        "enter": {
          "path": {"field": "layout_path"},
          "fill": {"scale": "color", "field": "count"},
          "stroke": {"value": "white"},
          "strokeWidth": {"value": 0.5}
        },
        "update": {
          "fillOpacity": {"value": 0.8}
        },
        "hover": {
          "fillOpacity": {"value": 1}
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Player Count",
      "format": "d"
    }
  ]
}